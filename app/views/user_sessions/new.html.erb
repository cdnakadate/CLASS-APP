<h1>Login</h1>
<%= form_tag user_sessions_path do %>
<div class="form-horizontal login-form">
  <div class="form-group">
      <div class="col-sm-offset-1 col-sm-10 input-group input-group-lg">
      <%= label_tag :email %>
    
     <%= text_field_tag :email, params[:email], :class => 'form-control',:type => "email", :placeholder => 'Email Address' %>
    </div>
  </div>
    
  <div class="form-group">
   <div class="col-sm-offset-1  col-sm-10 input-group input-group-lg">   
      <%= label_tag :password %>
    
      <%= text_field_tag :password, params[:password], :class => 'form-control',:type => "password", :placeholder => 'Password'  %>
    </div>
  </div>
  <br><br>
  <div class="form-group">
       <div class="col-sm-offset-1 col-sm-10 input-group input-group-lg">
        <%= submit_tag "Log in",:class => 'btn btn-lg btn-success'%>&nbsp;
        
      </div>
  </div>
</div>  
    
<% end %>

